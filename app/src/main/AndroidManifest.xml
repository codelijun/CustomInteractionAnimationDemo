<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lijun.customanimationdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ScaleActivity" />

        <activity android:name=".LeftRightActivity"
            android:theme="@style/AppThemeV2"/>

        <activity android:name=".UpDownActivity"
            android:windowSoftInputMode="stateAlwaysVisible"/>
        <service android:name=".CheckExitService"/>

        <activity android:name=".SelfScaleActivity"/>

        <activity android:theme="@style/Transparent"
            android:name=".CustomSharedActivity"/>

        <activity android:name=".SelfCenterExitActivity"
            android:theme="@style/AppThemeV2"/>
    </application>

</manifest>